---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class='lg:container mx-auto py-12 px-4 scroll-mt-16' id='youtube'>
  <h2 class='text-2xl lg:text-4xl lg:text-center font-bold pb-6 lg:pb-8'>
    Youtube
  </h2>
  <p class='xl:text-lg w-full lg:w-8/12 2xl:w-6/12 mx-auto'>
    {t("youtube.description")}
  </p>
  <div class='grid grid-cols-1 md:grid-cols-2 gap-8 pt-12'>
    <!-- Video 1 -->
    <div
      class='bg-white rounded-xl shadow-lg border border-gray/40 overflow-hidden'
    >
      <lite-youtube
        class='aspect-video w-full'
        videoid='u7PYEu5L2AA'
        title={t("youtube.video.one")}></lite-youtube>
      <div class='p-3'>
        <h3 class='text-sm xl:text-base font-medium text-black'>
          {t("youtube.video.one")}
        </h3>
      </div>
    </div>

    <!-- Video 2 -->
    <div
      class='bg-white rounded-xl shadow-lg border border-gray/40 overflow-hidden'
    >
      <lite-youtube
        class='aspect-video w-full'
        videoid='1mFsD4bpWYw'
        title={t("youtube.video.two")}
        '></lite-youtube>
      <div class='p-3'>
        <h3 class='text-sm xl:text-base font-medium text-black'>
          {t("youtube.video.two")}
        </h3>
      </div>
    </div>
  </div>
  <div class='mt-8 flex justify-center'>
    <a
      href='https://www.youtube.com/@QuietCodeRoom'
      target='_blank'
      rel='noopener noreferrer'
      class='inline-block border-2 border-white text-white font-medium px-6 py-3 rounded-full shadow hover:bg-gray-400/40 transition'
    >
      {t("youtube.button")}
    </a>
  </div>
</section>

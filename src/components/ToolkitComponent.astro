---
import '../styles/global.css';
import 'devicon/devicon.min.css';
const array = ['1', '2', '3'];
---

<section id='toolkit'>
  <h2>Toolkit</h2>
  <div>
    <ul>
      <li><i class='devicon-react-plain colored'></i>React</li>
      <li><i class='devicon-nextjs-plain colored'></i>NextJS</li>
      <li><i class='devicon-redux-plain colored'></i>Redux</li>
      <li><i class='devicon-astro-plain colored'></i>Astro</li>
    </ul>
    <ul>
      <li><i class='devicon-html5-plain colored'></i>HTML</li>
      <li><i class='devicon-css3-plain colored'></i>CSS</li>
      <li><i class='devicon-sass-plain colored'></i>Sass</li>
      <li><i class='devicon-bootstrap-plain colored'></i>Bootstrap</li>
      <li><i class='devicon-tailwindcss-plain colored'></i>Tailwind CSS</li>
      <li><i class='devicon-figma-plain colored'></i>Figma</li>
    </ul>

    <ul>
      <li><i class='devicon-javascript-plain colored'></i>Javascript</li>
      <li><i class='devicon-typescript-plain colored'></i>Typescript</li>
      <li><i class='devicon-jquery-plain colored'></i>jQuery</li>
      <!-- <li><i class='devicon-php-plain colored'></i>PHP</li> -->
    </ul>
  </div>
</section>
<style>
  h2:after {
    width: 70px;
  }
  section div {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1rem;
  }
  @media screen and (min-width: 768px) {
    section div {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  ul {
    list-style: none;
    padding: 1rem;
    border: 1px solid var(--secondary-color);
    border-radius: 5px;
    margin-block: 0;
  }
  li {
    display: flex;
    align-items: center;
    font-size: 1.1rem;
    margin: 1rem 0;
  }
  i {
    font-size: 1.8rem;
    margin-right: 0.8rem;
  }
</style>
